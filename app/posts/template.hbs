{{#ember-wormhole to="menu-drawer"}}
  {{#mdl-list classNames="post-list" as |list|}}
    {{#each model as |post|}}
      {{#list.item classNames="post-item"
                   lines=2
      }}
        {{#list.content}}
          {{#link-to 'posts.details' post classNames="post-item__title mdl-typography--headline"}}
            {{post.title}}
          {{/link-to}}

          {{#list.content type="text-body"
                          classNames="post-item__body"
          }}
            {{post.content}}
          {{/list.content}}
        {{/list.content}}
      {{/list.item}}
    {{/each}}
  {{/mdl-list}}
{{/ember-wormhole}}

{{outlet}}