{{/mdl-layout}}

<footer class="mdl-mini-footer">
  <div class="mdl-mini-footer__left-section">
    <div class="mdl-logo">El Guapo's Beautiful Blog</div>
  </div>
</footer>

<div class="overlay {{if drawer.isActive 'isActive'}}" {{action "closeDrawer"}}></div>