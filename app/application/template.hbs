  {{#layout.header}}
    {{layout.title title="El Guapo's Beautiful Blog"}}
  {{/layout.header}}

  <div id="menu-drawer" class="paper-drawer mdl-color--grey-100 {{if drawer.isActive 'isActive'}}"></div>

  {{#layout.content classNames="application-wrapper"}}
